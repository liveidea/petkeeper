= form_for @pet do |f|
  - if @pet.errors.any?
    #error_explanation
      %h2
        = pluralize(@pet.errors.count, "error")
        prohibited this pet from being saved:
      %ul
        - @pet.errors.full_messages.each do |message|
          %li= message
  .form-group
    = f.label :name
    = f.text_field :name, placeholder: "Вкажіть ім'я тваринки", class: 'form-control'
  .form-group
    = f.label :age
    = f.text_field :age, placeholder: 'Вкажіть вік тваринки', class: 'form-control'
  .form-group
    = f.label :gender
    = f.radio_button :gender, 'Він', :checked => true
    = f.label :female
    = f.radio_button :gender, 'Вона'

  .form-group
    = f.label :kind
    = f.text_field :kind, placeholder: "Напр. Собака"
  .form-group
    = f.label :species
    = f.text_field :species, placeholder: "Напр. Пітбуль"
  .form-group
    = f.label :description
    = f.text_area :description, placeholder: 'Вкажіть опис тваринки', class: 'form-control'
  .form-group
    = f.file_field :avatar
    = f.hidden_field :avatar_cache
  .form-group
    %button.btn.btn-default{:type => "submit"} Зареєструвати тваринку

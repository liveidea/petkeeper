= form_for(@pet) do |f|
  - if @pet.errors.any?
    #error_explanation
      %h2
        = pluralize(@pet.errors.count, "error")
        prohibited this pet from being saved:
      %ul
        - @pet.errors.full_messages.each do |message|
          %li= message
  .form-group
    = f.label :name
    = f.text_field :name, placeholder: "Вкажіть ім'я тваринки", class: 'form-control'
  .form-group
    = f.label :age
    = f.text_field :age, placeholder: 'Вкажіть вік тваринки', class: 'form-control'
  .form-group
    = f.label :gender
    .radio
      = f.label :gender do
        = f.radio_button :gender, 'male', :checked => true
        Він
    .radio
      = f.label :gender do
        = f.radio_button :gender, 'female'
        Вона
  .form-group
    = f.label :description
    = f.text_area :description, placeholder: 'Вкажіть опис тваринки', class: 'form-control'
  .form-group
    %button.btn.btn-default{:type => "submit"} Зареєструвати улюбленця
